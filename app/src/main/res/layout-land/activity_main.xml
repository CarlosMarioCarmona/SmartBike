<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartbikebt.uach.smartbikebt.MainActivity"><![CDATA[


    "
         />













    ]]>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/right"
        android:id="@+id/imageViewRight"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewUp"
        android:layout_toEndOf="@+id/imageViewUp"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/left"
        android:id="@+id/imageViewLeft"
        android:layout_alignTop="@+id/imageViewRight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/up"
        android:id="@+id/imageViewUp"
        android:layout_above="@+id/imageViewRight"
        android:layout_alignLeft="@+id/imageViewDown"
        android:layout_alignStart="@+id/imageViewDown" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/down"
        android:id="@+id/imageViewDown"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageViewLeft"
        android:layout_toEndOf="@+id/imageViewLeft"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="@string/main_activity_txtView_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSpeed"
        android:textSize="40dp"
        android:layout_below="@+id/imageViewUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
